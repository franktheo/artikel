
<div class="container">
   <div class="row">
      <div class="col-xs-12">

        <h4>New Article</h4>

        <%= form_for(:article, :url => {:controller => 'articles', :action => 'create'}) do |form| %>
          <%= render form %>
          <%= form.submit 'submit', class: 'btn btn-primary btn-xs' %> 
          or <%= link_to 'cancel', articles_path, class: 'btn btn-primary btn-xs' %>
        <% end %>

      </div>
   </div>
</div>

